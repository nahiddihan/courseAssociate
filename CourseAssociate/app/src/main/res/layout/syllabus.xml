           android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lvCourse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="3dp"/>

</LinearLayout>